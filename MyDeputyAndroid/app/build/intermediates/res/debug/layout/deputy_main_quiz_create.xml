<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <View
        android:id="@+id/statusBarBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/deputy_quiz_new_edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txt_quiz_title"
                android:textSize="24sp"
                android:textColor="@color/secondary_dark" />

            <EditText
                android:id="@+id/deputy_quiz_new_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txt_quiz_text"
                android:lines="3"
                android:textColor="@color/secondary_dark" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/txt_quiz_variant"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/secondary_dark" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/deputy_quiz_new_btn_add_variant"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/oval_blue"
                    android:src="@drawable/ic_content_add_white_small"
                    android:text="@string/txt_quiz_add_variant" />

                <EditText
                    android:id="@+id/deputy_quiz_new_edit_variant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/txt_quiz_add_variant"
                    android:textColor="@color/secondary_dark" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/deputy_quiz_new_variant_conteiner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="54dp"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/toolbar_dropshadow" />
    </FrameLayout>

</LinearLayout><!-- From: file:/Users/admin/AndroidStudioProjects/Deputy/MyDaputyAS/app/src/main/res/layout/deputy_main_quiz_create.xml -->