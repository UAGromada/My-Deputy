<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/info_mail_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="26dp"
            android:src="@drawable/ic_communication_email_blue" />

        <TextView
            android:id="@+id/info_mail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:textColor="@color/secondary_dark"
            android:textSize="16dp"
            android:text="@string/text_email"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/info_phone_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="26dp"
            android:src="@drawable/ic_communication_call_blue" />

        <TextView
            android:id="@+id/info_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:textColor="@color/secondary_dark"
            android:textSize="16dp"
            android:text="@string/text_phone_number"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/info_address_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="26dp"
            android:src="@drawable/ic_communication_business_blue" />

        <TextView
            android:id="@+id/info_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:textColor="@color/secondary_dark"
            android:textSize="16dp"
            android:text="@string/text_office"/>

    </LinearLayout>
</LinearLayout>